{
  "name": "main",
  "pipelines": [
    {
      "name": "geometry",
      "render_pass": "geometry_pass",
      "depth": {
        "write": 1,
        "test": "less_or_equal"
      },
	  "blend": [
	    {
		  "enable": 1,
		  "src_colour": "SRC_ALPHA",
		  "dst_colour": "ONE_MINUS_SRC_ALPHA",
		  "op": "ADD"
	    }
	  ],
      "cull" : "back",
      "shaders": [
        {
          "stage": "vertex",
          "shader": "mesh.vert",
					"includes": [
						"crude/platform.glsli"
					]
        },
        {
          "stage": "fragment",
          "shader": "mesh.frag",
					"includes": [
						"crude/platform.glsli",
						"crude/scene.glsli"
					]
        }
      ]
    }
  ]
}