						"crude/scene.glsli"
					]
				},
				{
					"stage" : "task",
					"shader" : "meshlet.task",
					"includes": [
						"crude/platform.glsli",
						"crude/debug.glsli",
						"crude/culling.glsli",
						"crude/meshlet.glsli",
						"crude/mesh.glsli",
						"crude/scene.glsli"
					]
				},
				{
					"stage" : "fragment",
					"shader" : "meshlet.frag",
