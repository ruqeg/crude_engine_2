{
  "name": "debug",
  "pipelines": [
    {
      "name": "debug",
      "render_pass": "debug_pass",
      "depth": {
        "write": 1,
        "test": "less_or_equal"
      },
	  "blend": [
	    {
		  "enable": 1,
		  "src_colour": "SRC_ALPHA",
		  "dst_colour": "ONE_MINUS_SRC_ALPHA",
		  "op": "ADD"
	    }
	  ],
    "vertex_input": {
      "attributes": [
        {
          "location": 0,
          "binding": 0,
          "offset": 0,
          "format": "FLOAT3"
        },
        {
          "location": 1,
          "binding": 0,
          "offset": 12,
          "format": "UBYTE"
        }
      ],
      "streams": [
        {
          "binding": 0,
          "stride": 16,
          "input_rate": "vertex"
        }
      ]
    },
    "cull" : "back",
    "topology" : "LINE_LIST",
    "shaders": [
      {
        "stage": "vertex",
        "shader": "debug.vert",
				"includes": [
					"crude/platform.glsli",
					"crude/debug.glsli",
					"crude/scene.glsli"
				]
      },
      {
        "stage": "fragment",
        "shader": "debug.frag",
				"includes": [
					"crude/platform.glsli",
					"crude/debug.glsli",
					"crude/scene.glsli"
				]
      }
    ]
    }
  ]
}