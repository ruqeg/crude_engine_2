{
	"name" : "deferred_meshlet",
	"buffers": [
		{
			"name": "deferred_meshlet",
			"filename": "deferred_meshlet.glsl"	,
			"includes" : [	
				"crude/platform.glsli",
				"crude/debug.glsli",
				"crude/scene.glsli",
				"crude/culling.glsli"
			]
		}
	],
	"pipelines" : [
		{
			"name" : "deferred_meshlet",
			"render_pass_output":
			{
				"reference": "gbuffer_early_pass" 
			},
			"depth" : {
				"write" : 1,
				"test" : "less_or_equal"
			},
			"cull" : "back",
			"shaders" : [
				{
					"stage" : "mesh",
					"buffer" : "deferred_meshlet"
				},
				{
					"stage" : "task",
					"buffer" : "deferred_meshlet"
				},
				{
					"stage" : "fragment",
					"buffer" : "deferred_meshlet"
				}
			]
		},
		{
			"name" : "collision_visualizer",
			"render_pass_output":
			{
				"reference": "collision_visualizer_pass" 
			},
			"depth" : {
				"write" : 0,
				"test" : "less_or_equal"
			},
	        "blend": [
	            {
		        "enable": 1,
		        "src_colour": "SRC_ALPHA",
		        "dst_colour": "ONE_MINUS_SRC_ALPHA",
		        "op": "ADD"
	            }
	        ],
			"shaders" : [
				{
					"stage" : "mesh",
					"buffer" : "deferred_meshlet"
				},
				{
					"stage" : "task",
					"buffer" : "deferred_meshlet"
				},
				{
					"stage" : "fragment",
					"buffer" : "deferred_meshlet"
				}
			]
		}
	]
}